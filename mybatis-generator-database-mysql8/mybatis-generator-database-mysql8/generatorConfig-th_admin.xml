<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 通用mapper所在目录 -->
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.example.thrd.my.mapper.MyMapper"/>
        </plugin>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/douyin?
                    useUnicode=true&amp;
                    characterEncoding=utf-8&amp;
                    useSSL=true&amp;
                    useJDBCCompliantTimezoneShift=true&amp;
                    useLegacyDatetimeCode=false&amp;
                    serverTimezone=Hongkong"

                        userId="root"
                        password="zhu123">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- 对应生成的pojo所在包 -->
        <javaModelGenerator targetPackage="com.example.thrd.pojo" targetProject="mybatis-generator-database-mysql8/src/main/java"/>

		<!-- 对应生成的mapper所在目录 mapper src/main/resources/mapper -->
        <sqlMapGenerator targetPackage="mapper" targetProject="mybatis-generator-database-mysql8//src/main/java"/>

		<!-- 配置mapper对应的java映射 -->
        <javaClientGenerator targetPackage="mapper" targetProject="mybatis-generator-database-mysql8//src/main/resources" type="XMLMAPPER"/>

        <!-- 数据库表 -->
        <table  tableName="users">
            <property name="useActualColumnNames" value="true"/>
        </table>
        <table  tableName="video">
            <property name="useActualColumnNames" value="true"/>
        </table>
        <table  tableName="comment">
            <property name="useActualColumnNames" value="true"/>
        </table>
        <table  tableName="follow">
            <property name="useActualColumnNames" value="true"/>
        </table>
        <table  tableName="favorite">
            <property name="useActualColumnNames" value="true"/>
        </table>
        <table  tableName="message">
            <property name="useActualColumnNames" value="true"/>
        </table>


    </context>
</generatorConfiguration>